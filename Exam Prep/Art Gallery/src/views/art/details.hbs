<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{item.title}}</h2>
                <h3>Author: {{item.username}}</h3>
                <h3>Painting technique: {{item.painting}}</h3>
                <h3>Certificate of authenticity: {{item.authenticity}}</h3>

                <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if item.isOwner}}
                    <a href="/art/edit/{{item._id}}" class="btn-edit">Edit</a>
                    <a href="/art/delete/{{item._id}}" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if item.hasShared}}
                     
                    <p class="shared-pub">You already shared this publication</p>
                    {{else }}
                    <!-- logged in user who has not yet shared the publication-->
                   <a href="/art/share/{{item._id}}" class="btn-share">Share publication</a>
                    <!-- logged in user who has already shared the publication-->
                    {{/if}}
                    {{/if}}
                </div>

            </article>

            <article class="details-card-image">
                <img src="/img/img-5.jpg" alt="art-image2">
            </article>

        </article>
    </section>
</main>