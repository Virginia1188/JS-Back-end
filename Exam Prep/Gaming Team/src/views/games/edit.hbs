<main id="edit">
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form  method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#each options}}
                    <option value="{{value}}" {{#if selected}} selected {{/if}} >{{title}}</option>
                    {{/each}}

                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{item.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image"
                    placeholder="{{item.image}}" value="{{item.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{item.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{item.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description"> {{item.description}}
                    </textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>