<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{item.image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{item.name}}</h1>
                <h3 id="platform">Platform: {{item.platform}}</h3>
                <p id="price"><span>Price: ${{item.price}}</span></p>
                <p id="genre"><span>Genre: {{item.genre}}</span></p>
                <p id="description">{{item.description}}</p>
            </div>
            {{#if item.isUser}}
            <div class="product-btn">
                
                {{#if item.isOwner}}
                <div class="author">
                    <a href="/games/edit/{{item._id}}" class="btn-edit">Edit</a>
                    <a href="/games/delete/{{item._id}}" class="btn-delete">Delete</a>
                </div>
                {{else}}

                    {{#if item.hasBougth}} 
                    <p class="buy-message">You have already bought this game</p>
                    {{else}}
                    <a href="/games/buy/{{item._id}}" class="btn-buy">Buy</a>

                    {{/if}} 
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>