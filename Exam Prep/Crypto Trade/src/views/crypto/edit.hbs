                    <option value="debit-card" {{#if (equal offer.payment 'debit-card')}} selected{{/if}}>Debit Card</option>
                    <option value="paypal" {{#if (equal offer.payment 'paypal')}} selected{{/if}}selected>PayPal</option> --}}
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
