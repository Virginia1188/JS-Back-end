<main class="edit">
    <!-- Edit Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="POST">
                <input type="text" name="name" id="name" placeholder="Name" value="{{item.name}}" />
                <input type="text" name="years" id="years" placeholder="Years" value="{{item.years}}" />
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{item.kind}}" />
                <input type="text" name="image" id="animal-img" placeholder="Image url" value="{{item.image}}" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{item.need}}" />
                <input type="text" name="location" id="location" placeholder="Location" value="{{item.location}}" />
                <textarea id="description" placeholder="Description..."
                    name="description">{{item.description}}</textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>
</div>